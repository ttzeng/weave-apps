<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <ImageView
        android:id="@+id/device_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_menu_help" />

    <TextView
        android:id="@+id/device_title"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/device_picture"
        android:layout_toEndOf="@id/device_picture"
        android:paddingBottom="5dp"
        tools:text="Device title"/>

    <TextView
        android:id="@+id/device_description"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/tertiary_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/device_picture"
        android:layout_toEndOf="@id/device_picture"
        android:layout_below="@id/device_title"
        android:paddingBottom="5dp"
        tools:text="Device description"/>

    <TextView
        android:id="@+id/device_device_type"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/tertiary_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/device_description"
        android:layout_gravity="end"
        tools:text="Device type"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>